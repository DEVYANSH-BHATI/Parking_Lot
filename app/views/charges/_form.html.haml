.container
  = form_for @charge do |f|
    - if @charge.errors.any?
      #error_explanation
        %h2= "#{pluralize(@charge.errors.count, "error")} prohibited this charge from being saved:"
        %ul
          - @charge.errors.full_messages.each do |message|
            %li= message
    %form
      .form-group
        = f.label :vehicle_type
        = f.text_field :vehicle_type, :class => "form-control"
      .form-group
        = f.label :min_charge
        = f.number_field :min_charge, :class => "form-control"
      .form-group
        = f.label :min_hours
        = f.number_field :min_hours, :class => "form-control"
      .form-group
        = f.label :extra_hour_charges
        = f.number_field :extra_hour_charges, :class => "form-control"
      .actions
        = f.submit 'Save'
      -# %button.btn{type: "reset"} Reset
      -# %button.btn{style: "float:right", type: "submit"} Submit


