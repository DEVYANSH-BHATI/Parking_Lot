%h1 Listing charges

%table
  %thead
    %tr
      %th Vehicle type
      %th Min charge
      %th Min hours
      %th Extra hour charges
      %th
      %th
      %th

  %tbody
    - @charges.each do |charge|
      %tr
        %td= charge.vehicle_type
        %td= charge.min_charge
        %td= charge.min_hours
        %td= charge.extra_hour_charges
        %td= link_to 'Show', charge
        %td= link_to 'Edit', edit_charge_path(charge)
        %td= link_to 'Destroy', charge, method: :delete, data: { confirm: 'Are you sure?' }

%br

