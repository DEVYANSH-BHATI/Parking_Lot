


<!-- <p style="color: green"><%= %></p> -->
<div class="app-main__outer">
  <div class="app-main__inner">
    <div class="app-page-title text-center"><strong>Parking Lot Dashboard</strong></div>
    <div class="row">
      <div class="col-md-12">
          <div class="alert" >
            <%= notice %>  
          </div>
        <div class="main-card mb-3 card">
          <div class="card-header">
            <div class="row">
              <div class="col">
                <%= link_to "Name/Number", vehicles_path(:owner => "owner"), class: "btn-shadow btn btn-outline-info" %>
                <%# <button type="button" class="btn-shadow btn btn-outline-secondary">Name/Number</button> %>
              </div>
              <div class="col">
                <%= link_to "VehicleNo", vehicles_path(:owner => "number"), class: "btn-shadow btn btn-outline-info" %>

                <%# <button type="button" class="btn-shadow btn btn-outline-success">VehicleNo</button> %>
              </div>
              <div class="col">
                <%= link_to "Bike", vehicles_path(:owner => "bike"), class: "btn-shadow btn btn-outline-info" %>

                <%# <button type="button" class="btn-shadow btn btn-outline-danger">Bike</button> %>
              </div>
              <div class="col">
                <%= link_to "Car", vehicles_path(:owner => "car"), class: "btn-shadow btn btn-outline-info" %>

                <%# <button type="button" class="btn-shadow btn btn-outline-danger">Car</button> %>
              </div>

            </div>
            <%# Search bar %>
            <%= form_tag vehicles_path, :method => 'get', style: "padding : 0px; margin-top : -5px;" do%>
            <div class="col">
              <%= search_field_tag :search, params[:search], class: "search-input", placeholder: "type to search"%>
              <%= button_tag "search", class: "btn-shadow btn btn-light", style: "padding : 8px; margin-top : 1px;"%>
              <button class="close"></button>
            </div>
            <% end %>
          </div>
          <div class="table-responsive">
            <table class="align-middle mb-0 table table-striped table-borderless table-hover">
              <thead>
                <tr>
                  <th class="text-center">#</th>
                  <th class="text-center">Name/Number</th>
                  <th class="text-center">Type</th>
                  <th class="text-center">Vehicle No</th>
                  <th class="text-center">In time</th>
                  <th class="text-center">Out time</th>
                  <th class="text-center">Total Hours</th>
                  <th class="text-center">Charges</th>
                  <th class="text-center">Status</th>
                  <th class="text-center">Actions(User)</th>
                </tr>
              </thead>

              <%= render partial: "vehicle" , collection: @vehicles, as: :vehicle, locals: { readable_total_hours2: @readable_total_hours2} %>

              <%#= render partial: "vehicle" , collection: @vehicles %>


            </table>
            <%= will_paginate @vehicles, :container => false %>

            

          </div>
        </div>
              <div class="main-card mb-3 card">
                <% @charges.each do |v| %>
                  <div>
                    <strong>No of <%= v %>:</strong>
                    <%= Vehicle.where(vehicle_type: v).count %>
                    &nbsp Out of 10 
                    <%#=  %>
                  </div>
                <% end %>
                <br>
                <div >Total Vehicles:<%= Vehicle.count%></div>
              </div>
      </div>
    </div>
  </div>



</div>
