<section class="" style="">
  <div class="container">
    <div class="row d-flex justify-content-center">
      <div class="col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 2rem; background-color: #cbd9df1f;">
          <div class="card-body p-8 text-center">

            <h3 class="mb-5">Log in</h3>
             <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <div class="field form-outline mb-4">
              <%= f.label :email, {class: "form-label"} %><br />
              <%= f.email_field :email, {class: "form-control form-control-lg"} %>
            </div>

            <div class=" field form-outline mb-4">
              <%= f.label :password, {class: "form-label"} %><br />
              <%= f.password_field :password, {class: "form-control form-control-lg"} %>
            </div>

            <!-- Checkbox -->
             <% if devise_mapping.rememberable? %>
            <div class="form-check d-flex justify-content-start mb-4">
              <%= f.check_box :remember_me, {class: "form-check-input"} %>
              <%= f.label :remember_me, {class: "form-check-label"} %>
            </div>
            <% end %>

            <div class="actions">
               <%= f.submit "Log in", { class: "btn btn-primary btn-lg btn-block"} %>
            </div>
            <% end %>
            <hr class="my-4">
            <%= render "users/shared/links" %>

            <%# <button class="btn btn-lg btn-block btn-primary" style="background-color: #dd4b39;"
              type="submit"><i class="fab fa-google me-2"></i> Sign in with google</button>
            <button class="btn btn-lg btn-block btn-primary mb-2" style="background-color: #3b5998;"
              type="submit"><i class="fab fa-facebook-f me-2"></i>Sign in with facebook</button> %>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>

